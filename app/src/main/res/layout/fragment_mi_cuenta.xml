<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorNew2"
    android:orientation="vertical"
    android:paddingTop="@dimen/text_input_layout_padding_top">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/liner_height_home">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivImageUser"
                android:layout_width="@dimen/img_encabezado"
                android:layout_height="@dimen/img_encabezado"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar"
                app:border_color="@color/colorAccent2"
                app:border_overlay="true"
                app:border_width="2dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tvTitleCuenta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:text=":)"
                android:textColor="@android:color/white"
                android:textSize="@dimen/app_compat_button_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mensajeTitulo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:text="¿Què tal tu dìa?"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/pdtop_datos_primero"
                android:text="Nombre"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <requestFocus />
                >

                <EditText
                    android:id="@+id/nombreUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:drawableLeft="@drawable/usuarioperfil"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:fontFamily="@font/eproundie"
                    android:hint="Nombre"
                    android:inputType="textNoSuggestions"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/layout_marginTop_cardview"
                android:text="Documento de Identidad"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/diUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:drawableLeft="@drawable/di"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:fontFamily="@font/eproundie"
                    android:hint="Documento de Identidad"
                    android:inputType="number|textNoSuggestions"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/layout_marginTop_cardview"
                android:text="Correo electrònico"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/emailUser"
                    android:enabled="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:drawableLeft="@drawable/correo"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:fontFamily="@font/eproundie"
                    android:hint="Correo electrònico"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/layout_marginTop_cardview"
                android:text="Fecha de nacimiento"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/nacimientoUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:clickable="true"
                    android:drawableLeft="@drawable/fecha_nacimiento"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:focusable="false"
                    android:fontFamily="@font/eproundie"
                    android:hint="Fecha de nacimiento"
                    android:inputType="date"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/layout_marginTop_cardview"
                android:text="Nùmero de celular"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/telefonoUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:drawableLeft="@drawable/celular"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:fontFamily="@font/eproundie"
                    android:hint="Nùmero de celular"
                    android:inputType="phone|textNoSuggestions"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eproundie"
                android:gravity="center"
                android:paddingTop="@dimen/layout_marginTop_cardview"
                android:text="Dirección"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_mensaje"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <EditText
                    android:id="@+id/direccionUser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccentTransparent2"
                    android:drawableLeft="@drawable/direccion"
                    android:drawablePadding="@dimen/drawablePadding"
                    android:fontFamily="@font/eproundie"
                    android:hint="Dirección"
                    android:inputType="text|textNoSuggestions"
                    android:padding="@dimen/padding_editext"
                    android:textSize="@dimen/text_size_activity_cuenta" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="invisible"
                android:layout_width="@dimen/width_cardview"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marginTop_cardview"
                card_view:cardCornerRadius="@dimen/radius_cardview"
                card_view:cardElevation="@dimen/elevation_cardview"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/layout_marginBottom_linearsesion"
                    android:background="@color/colorAccentTransparent2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/layout_marginBottom_linearsesion">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eproundie"
                        android:paddingBottom="@dimen/paddingBottom_linear"
                        android:text="Selecciona tu género"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/txt_mensaje"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/paddingLeft_linear_genero"
                        android:paddingTop="@dimen/layout_marginBottom_linearsesion">

                        <RadioGroup
                            android:id="@+id/radio_group_genero"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioM"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="Hombre" />

                            <RadioButton
                                android:id="@+id/radioFemenino"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="Mujer" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="@dimen/btnCerrarSesion_width"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20.0dip"
                android:layout_marginTop="@dimen/btnCerrarSesion_marginTop"
                android:background="@drawable/buttonshape"
                android:text="CERRAR SESIÓN"
                android:theme="@style/AppTheme.MyButton" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>