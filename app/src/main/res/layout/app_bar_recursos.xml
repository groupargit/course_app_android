<?xml version="1.0" encoding="utf-8"?>
<androidx.support.design.widget.CoordinatorLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/colorPrimaryDark">

    <androidx.support.design.widget.AppBarLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:theme="@style/AppBarOverlay">

        <androidx.support.v7.widget.Toolbar xmlns:n2="http://schemas.android.com/apk/res-auto"
            n1:id="@id/toolbar"
            n1:layout_width="fill_parent"
            n1:layout_height="?actionBarSize"
            n1:background="?colorPrimary"
            n2:popupTheme="@style/PopupOverlay" />

        <SearchView
            n1:id="@+id/buscador"
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:background="@color/searchBackground" />
    </androidx.support.design.widget.AppBarLayout>

    <include layout="@layout/content_recursos" />

    <androidx.support.design.widget.FloatingActionButton xmlns:n3="http://schemas.android.com/apk/res-auto"
        n1:id="@+id/fab"
        n1:layout_width="wrap_content"
        n1:layout_height="wrap_content"
        n1:layout_gravity="end|bottom|center"
        n1:layout_margin="@dimen/fab_margin"
        n3:backgroundTint="@color/colorAccent"
        n3:srcCompat="@android:drawable/ic_menu_help" />
</androidx.support.design.widget.CoordinatorLayout>